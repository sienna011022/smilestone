<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".item.ItemActivity"
    android:background="@drawable/item_background"
    >
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chat_bar"
        >
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_item"
                android:layout_width="match_parent"
                android:layout_height="368dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/logo_character"
                android:scaleType="centerCrop"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/user_bar"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                app:layout_constraintTop_toBottomOf="@id/image_item"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/bottom_border"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/person"
                    app:civ_circle_background_color="@color/message_box"
                    android:layout_marginStart="15dp"
                    />

                <TextView
                    android:id="@+id/user_nickname"
                    app:layout_constraintTop_toTopOf="@id/user_image"
                    app:layout_constraintBottom_toBottomOf="@id/user_image"
                    app:layout_constraintStart_toEndOf="@id/user_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="WWIT"
                    android:textSize="18sp"
                    android:fontFamily="@font/notosanskr_bold"
                    android:textColor="@color/black"
                    />



            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/title"
                app:layout_constraintTop_toBottomOf="@id/user_bar"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미적분 문제 풀어드려요!!"
                />

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/time"
                app:layout_constraintBottom_toBottomOf="@id/time"
                android:text="수학"
                android:textColor="@color/light_gray"
                android:fontFamily="@font/notosanskr_bold"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/category"
                app:layout_constraintEnd_toStartOf="@id/time"
                app:layout_constraintBottom_toBottomOf="@id/time"
                android:text="·"
                android:textColor="@color/light_gray"
                android:fontFamily="@font/notosanskr_bold"
                android:textSize="12sp"
                android:layout_marginStart="7dp"
                />

            <TextView
                android:id="@+id/time"
                app:layout_constraintTop_toBottomOf="@id/title"
                app:layout_constraintStart_toEndOf="@id/space"
                android:textSize="12sp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/light_gray"
                android:layout_marginStart="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1분전"
                />

            <Button
                android:id="@+id/btn_change"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="수정"
                android:textSize="12sp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/main_color"
                app:layout_constraintEnd_toStartOf="@id/btn_delete"
                app:layout_constraintTop_toTopOf="@id/time"
                app:layout_constraintBottom_toBottomOf="@id/time"
                android:visibility="invisible"
                />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="삭제"
                android:textSize="12sp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/main_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/time"
                app:layout_constraintBottom_toBottomOf="@id/time"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/content"
                app:layout_constraintTop_toBottomOf="@id/time"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="15sp"
                android:fontFamily="@font/notosanskr_regular"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="미적분 문제 풀어드립니다.\n저의 경력은 10년\n\n\n\n\n\n\n\n\n\n연락 주세요~"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chat_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1075"
        android:background="@drawable/top_border"
        >

        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/notosanskr_bold"
            android:textColor="@color/black"
            android:text="3,000원"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="15dp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            />

        <Button
            android:id="@+id/btn_chat"
            android:layout_width="120dp"
            android:layout_height="46dp"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:text="실시간 토론방"
            android:background="@drawable/login"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginEnd="15dp"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>