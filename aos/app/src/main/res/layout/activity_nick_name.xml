<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info.account.NickNameActivity">

    <TextView
        android:id="@+id/text_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="변경할 닉네임"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/notosanskr_bold"
        android:layout_margin="16dp"
        android:layout_marginTop="24dp"
        />


    <EditText
        android:id="@+id/edit_nickname"
        android:layout_width="0dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toBottomOf="@id/text_nickname"
        app:layout_constraintStart_toStartOf="@id/text_nickname"
        android:background="@drawable/input_box"
        app:layout_constraintWidth_percent="0.9"
        android:textColor="@color/black"
        android:paddingStart="12dp"
        />

    <Button
        android:id="@+id/btn_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_nickname"
        app:layout_constraintEnd_toEndOf="@id/edit_nickname"
        android:text="변경"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/main_color"
        android:fontFamily="@font/notosanskr_bold"
        android:layout_marginTop="6dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>